{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "title":"World Canon Schema",
  "type":"object",
  "required":["id","name","atlas","terrain","continents","metadata"],
  "properties":{
    "id":{"type":"string","pattern":"^[a-z0-9_.-]+$"},
    "name":{"type":"string","minLength":1},
    "atlas":{
      "type":"object",
      "required":["landmass_svg","projection","resolution"],
      "properties":{
        "landmass_svg":{"type":"string"},
        "projection":{"type":"string","enum":["equirectangular"]},
        "resolution":{"type":"string","pattern":"^[0-9]+x[0-9]+$"}
      },
      "additionalProperties":true
    },
    "terrain":{
      "type":"object",
      "required":["bit_depth","resolution","sea_level"],
      "properties":{
        "base_height":{"type":"string"},
        "watermask":{"type":"string"},
        "relief":{"type":"string"},
        "bit_depth":{"type":"integer","enum":[8,16]},
        "resolution":{"type":"string","pattern":"^[0-9]+x[0-9]+$"},
        "sea_level":{"type":"integer","minimum":0},
        "units":{"type":"string"},
        "mode":{"type":"string"}
      },
      "additionalProperties":true
    },
    "continents":{"type":"array","items":{"type":"string"},"minItems":1},
    "metadata":{
      "type":"object",
      "required":["canon_version"],
      "properties":{
        "canon_version":{"type":"string"},
        "schema":{"type":"string"},
        "source_svg":{"type":"string"}
      },
      "additionalProperties":true
    }
  },
  "additionalProperties":false
}